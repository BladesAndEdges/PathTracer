// --------------------------------------------------------------------------------
inline Vector2::Vector2() : m_x(0.0f), m_y(0.0f)
{
}

// --------------------------------------------------------------------------------
inline Vector2::Vector2(float x, float y) : m_x(x), m_y(y)
{
}

// --------------------------------------------------------------------------------
inline void Vector2::SetX(const float x)
{
	m_x = x;
}

// --------------------------------------------------------------------------------
inline void Vector2::SetY(const float y)
{
	m_y = y;
}

// --------------------------------------------------------------------------------
inline float Vector2::X() const
{
	return m_x;
}

// --------------------------------------------------------------------------------
inline float Vector2::Y() const
{
	return m_y;
}

